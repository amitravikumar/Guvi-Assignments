//Problem 1 :Write a function called “isEven”.
//Given a number, “isEven” returns whether it is even. 
var isEven = (num) => {
    if (num%2==0)
        console.log("Even")
    else
        console.log("Odd")
}
isEven(11)

//Problem 2: Write a function called “areBothOdd”.
//Given 2 numbers, “areBothOdd” returns whether or not both of the given numbers are odd.

function areBothOdd(n1,n2){
	if(n1%2 ==0 || n2%2 ==0)
		console.log("False")
	else
		console.log("True")
}
areBothOdd(221,554)

//Problem 3: Write a function called “getFullName”.
//Given a first and a last name, “getFullName” returns a single string with the given first and last names separated by a single space.

function getFullName(firstName, lastName){
	console.log(firstName + " " + lastName)
}
getFullName("GUVI", "GEEK")


//Problem 4: Write a function called “getLengthOfWord”.
//Given a word, “getLengthOfWord” returns the length of the given word.

(function(str){
	var guv = str.length
	console.log(guv)
})("GUVI")


//Problem 5: Write a function called “isSameLength”.
//Given two words, “isSameLength” returns whether the given words have the same length.

function isSameLength(word1, word2){
	if(word1.length == word2.length)
		console.log("True")
	else
		console.log("False")
}
isSameLength("GUVI", "GEEK")


//Problem 6: Write a function called “getNthElement”.
//Given an array and an integer, “getNthElement” returns the element at the given integer, within the given array. If the array has a length of 0, it should return ‘undefined’.

function getNthElement(array, index){
	console.log(array[index])
}
getNthElement([1, 3, 5], 1)


//Problem 7: Write a function called “getLastElement”.
//Given an array, “getLastElement” returns the last element of the given array. If the given array has a length of 0, it should return ‘undefined’.

function getLastElement(array){
	guv = array.length-1
	if (guv < 1)
		console.log("Undefined")
	else
		console.log(array[array.length-1])
}
getLastElement([1, 2, 3, 4]);


//Problem 8: Write a function called “getProperty”.
//Given an object and a key, “getProperty” returns the value of the property at the given key. If there is no property at the given key, it should return undefined.

function getProperty(obj, key){
	console.log(obj.key)
}
var obj = {
key: "value"
};
var key
getProperty(obj,key)


//Problem 9: Write a function called “addProperty”.
//Given an object, and a key, “addProperty” sets a new property on the given object with a value of true.

function addProperty(obj, key){
	obj[key] = "True"
	console.log(obj);
}
obj = {}
addProperty(obj,"myProperty")


//Problem 10: Write a function called “removeProperty”.
//Given an object and a key, “removeProperty” removes the given key from the given object.

function removeProperty(obj, key){
	obj[key] = undefined
    console.log(obj[key])
}
var key = "myProperty"
removeProperty(obj,key)
